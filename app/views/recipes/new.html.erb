<% #Provide the page title in a symbol to application.html.erb to avoid duplication   %>
<% provide :title, 'New Recipe' %>
<div class="container-fluid">
  <h1 class="h1center">Crea la tua ricetta</h1>

  <div class="row">
    <div class="span7 offset5">
      <%= form_for @recipe do |f| %>

          <%= f.label :name, "Nome" %>
          <%= f.text_field :name %>

          <%= f.label :"Tipo di piatto" %>
          <%= f.select :piatto, ['Antipasto', 'Primo', 'Secondo', 'Dolce', 'Altro'], :id => "p" %>

          <%= f.label :"Tipo di cucina" %>
          <%= f.select :cucina, ['Araba', 'Cinese', 'Italiana', 'Messicana', 'Altro'], :id => "c" %>

          <%= f.label :vegetariana %>
          <%= f.check_box :vegetariana %>

          <%= f.label :vegana %>
          <%= f.check_box :vegana %>

          <%= f.label :latticini %>
          <%= f.check_box :latticini %>

          <%= f.label :glutine %>
          <%= f.check_box :glutine %>

          <%= f.fields_for :ingredients do |builder| %>
              <%= render "ingredients_form", :f => builder %>
          <% end %>

          <%= f.label :descrizione %>
          <%= f.text_field :descrizione %>

          <%= f.submit 'Crea ricetta', class: 'btn btn-large btn-primary' %>
      <% end %>

    </div>
  </div>
</div>