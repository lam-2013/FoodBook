<% provide(:title, @title) %>
<div class="container-fluid">
<div class="row-fluid">
  <aside class="span4">
    <section>
      <%=link_to gravatar_for(@user) , @user%>
      <h1><%= link_to @user.name, @user %></h1>


    </section>
    <section>
      <%# render 'shared/stats' %>
      <% if @users.any? %>
          <div class="user_avatars">
            <% @users.each do |user| %>
                <%= link_to gravatar_for(user, size: 50), user %>
            <% end %>
          </div>
      <% end %>
    </section>
  </aside>
  <div class="span8">
    <h3><%= "Cuochi followers" %></h3>
    <% if @users.any? %>
        <ul class="users">
          <%= render @users %>
        </ul>
        <%= will_paginate %>
    <% end %>
  </div>
</div>
</div>